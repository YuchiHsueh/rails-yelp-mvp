<div class="container">
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= @restaurant.name %></h5>
      <h6 class="card-subtitle mb-2 text-muted">Adress: <%= @restaurant.address %></h6>
      <p class="card-text">Phone: <%= @restaurant.phone_number %></p>
      <p class="card-text">Category: <%= @restaurant.category %></p>
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
  <br>
  <h5>Reviews</h5>
  <ul class="list-group list-group-flush">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"> <%= review.content %> Rating: <%= review.rating %> stars</li>
    <% end %>
  </ul>
</div>
